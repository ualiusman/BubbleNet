@model BubbleNet.Models.FeatureUser

@{
    ViewBag.Title = "Features Distribution";
}

<h2>Features Distribution</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Distribute Features</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UserId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", (List<SelectListItem>)ViewBag.AllUsrs, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FeatureId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FeatureId", (List<SelectListItem>)ViewBag.AllFeaturs, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FeatureId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Distribute" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Featurs List", "Index") | @Html.ActionLink("Features Distribution List", "FeaturesDistributionList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
