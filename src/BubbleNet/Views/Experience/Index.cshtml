@model IEnumerable<BubbleNet.Models.ExperienceViewModel>

@{
    ViewBag.Title = "Experience Factory";
}

<h2>Experience Factory</h2>

<p>
    @Html.ActionLink("Create New Experience", "Create")
</p>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserExperience)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserExperience)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ExperienceId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ExperienceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ExperienceId })
        </td>
    </tr>
}

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
