@model BubbleNet.Core.Models.Communication

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Communication Status</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CommunicationFrom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CommunicationFrom", (List<SelectListItem>)ViewBag.AllUsrs, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CommunicationFrom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CommunicationTo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CommunicationTo", (List<SelectListItem>)ViewBag.AllUsrs, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CommunicationTo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Satus, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Satus", (List<SelectListItem>)ViewBag.Status, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Satus)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
