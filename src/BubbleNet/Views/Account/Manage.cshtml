@using BubbleNet.Models;
@using Microsoft.AspNet.Identity;
@model Tuple<UserViewModel, ManageUserViewModel>
@{
    ViewBag.Title = "Manage Account";
}

<h2>@ViewBag.Title.</h2>
<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>

<p class="text-success" >@ViewBag.StatusMessage</p>

<div class="row">
    <div class="col-md-12">
        @Html.Partial("_ManageAccountInfo",Model.Item1)
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangePasswordPartial", Model.Item2)
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }

        @*<section id="externalLogins">
            @Html.Action("RemoveAccountList")
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>*@
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
